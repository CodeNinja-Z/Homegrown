<%= form_for(@trade) do |f| %>
  <ul>
  	<li><%= @buyer.name %><%= @product.name %></li>
    <li>What was the result of this trade?</li>

    <%= f.radio_button(:success, "true")  %>
    <li><%= f.label(:success, "Succesful") %></li>
    <%= f.radio_button(:success, "false")  %>
    <li><%= f.label(:unsuccessful, "Unsuccesful") %></li>


  </ul>
    <%= f.label :negotiation_result %>
    <%= f.text_field :negotiation_result %>
	  <%= f.hidden_field :seller_id, {value: current_user.id} %>
	  <%= f.hidden_field :buyer_id, {value: @buyer.id} %>
	  <%= f.hidden_field :product_id, {value: @product.id} %>	
    <%= f.hidden_field :conversation_id, {value: @conversation.id} %>
    <%= f.submit %>
<% end %>