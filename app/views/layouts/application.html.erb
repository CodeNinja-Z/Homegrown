<!DOCTYPE html>
<html>
<head>
  <title>Homegrow</title>
  <meta name="viewport" content="initial-scale=1.0,width=device-width">
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag "https://maps.googleapis.com/maps/api/js" %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <header class="header-bar">
    <ul class="nav">
      <% if current_user %>

        <li class="nav-link">
            <%= link_to "Sign out", :logout, method: :post %>
        </li>

        <li class="nav-button">
          <i class="fa fa-user"></i>
          <ul>
            <li>
             <%= link_to user_path(current_user) do %>
                Profile
              <% end %>
            </li>
            <li>
              <%= link_to user_path(current_user) do %>
                Garden
              <% end %>
            </li>
          </ul>
        </li>

      <% else %>
        <li class="nav-link">
            <%= link_to "Sign in", :login %>
        </li>

      <% end %>
      <li class="nav-button">
        <%= link_to products_path do %>
          <i class="fa fa-search" ></i>
        <% end %>
      </li>

      <li class="nav-button">
        <%= link_to products_path do %>
          <i class="fa fa-home"></i>
        <% end %>
      </li>

      <%= link_to root_path do %>
        <div class="homegrown">
        </div>
      <% end %>
    </ul>

    <div class="nav-search">
      <%= form_tag products_path, method: :get, id: 'search-form'  do %>
        <%= text_field_tag :search, params[:search], id: 'search-field' %>
        <%= range_field_tag(:proximity, :distance, :in => 0..30, :step => '5', :value => '10') %>
        <div class="rangevalue"></div>
        <%= submit_tag "search", id: "search-button" %>
      <% end %>
    </div>

  </header>

  <main>
    <div>
      <p id="notice"><%= flash[:notice] %></p>
      <p id="alert"><%= flash[:alert] %></p>
    </div>
    <%= yield %>
  </main>

</body>
</html>
