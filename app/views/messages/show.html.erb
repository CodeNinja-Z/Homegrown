<%= @product.name %>

<%= form_for([@product, @message]) do |f| %>
  <div class="field">
    <%= f.label :title %>
    <%= f.text_area :title %>
  </div>
  <div class="field">
    <%= f.label :content %>
    <%= f.text_area :content %>
  </div>
  <div class="action">
    <%= f.submit %>
  </div>
<% end %>