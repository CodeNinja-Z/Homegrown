<div class="carousel-container">
  <div class="carousel">
    <% @products.each do |product| %>
      <div class="carousel-card">
        <div class="carousel-pic">
          <%= image_tag product.image_url(:thumb).to_s %>
        </div>
        <div class="carousel-info">
          <ul>
            <li><%= link_to product.name, product_path(product) %></li>
            <li>by: <%= product.garden.user.name %></li>
          </ul>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div class="search-container">
</div>

<div class="category-title">
  <h3>Browse by Category</h3>
</div>

<div class="category-container">

  <div class="category-thumb" id="leafy-green-btn">
    <div class="btn-mask">
      <h5>Leafy Green</h5>
    </div>
  </div>

  <div class="category-thumb" id="roots-btn">
    <div class="btn-mask">
      <h5>Roots</h5>
    </div>
  </div>

  <div class="category-thumb" id="fruit-veggie-btn">
    <div class="btn-mask">
      <h5>Fruit Vegetables</h5>
    </div>
  </div>

  <div class="category-thumb" id="berries-btn">
    <%= link_to raw("
        <div class=\"btn-mask\">
          <h5>Berries</h5>
        </div>
      "),
      products_path(:tag => "berries") %>
  </div>

  <div class="category-thumb" id="pomes-btn">
    <div class="btn-mask">
      <h5>Pomes</h5>
    </div>
  </div>

  <div class="category-thumb" id="citrus-btn">
    <div class="btn-mask">
      <h5>Citrus</h5>
    </div>
  </div>

</div>