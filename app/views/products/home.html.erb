<div class="banner">
  <div class="banner-text">
    <h1 id="text-1">Trade Fresh Plants</h1>
    <h1 id="text-2">Eat Healthy</h1>
  </div>
</div>

<h3>Products near You</h3>
<div class="carousel-container">
  <div class="carousel">
    <% @products.each do |product| %>
      <div class="carousel-card">
        <div class="carousel-pic">
          <%= image_tag product.image_url(:thumb).to_s %>
        </div>
        <div class="carousel-info">
          <ul>
            <li class="truncate"><%= link_to product.name, product_path(product) %></li>
            <li class="truncate">by: <%= product.garden.user.name %></li>
          </ul>
        </div>
      </div>
    <% end %>
  </div>
</div>

