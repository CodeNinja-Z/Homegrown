<div class="product-grid">
  <%= render 'displayproduct' %>
    <div class="product-show-grid">
      <% if @product.garden.user == current_user %>
        <div>
          <%= form_for(@product) do |f| %>
            <div>
              <%= f.label :tag_list, :class => 'text-label' %>
              <%= f.text_field :tag_list,:class => 'text-field' %>
            </div>
            <div class="update-btn edit-controls">
              <li><%= f.submit "Update" %></li>
              <li> <%= button_to 'Edit', edit_product_path(@product), method: :get %></li>
              <li><%= button_to "Delete", product_path(@product) , method: :delete, data: {confirm: "Are you sure you want to delete this product?"} %></li>
            </div>
          <% end %>
        </div>
      <% end %>
      <% if current_user && @product.garden.user != current_user %>
        <div class="product-show-text">Please leave a message
          <%= render 'messageform' %>
        </div>
      <% end %>
    </div>
</div>