<div class="product-show-container">

  <%= render 'displayproduct' %>

  <ul class="social-media-bar">
    <li><%= social_share_button_tag("#{@product.name} grown by #{@product.garden.user.name}!", :popup => "true") %></li>
  </ul>

  <div class="product-show-btn">
    <%= button_to 'Back to the Garden', garden_path(@product.garden), method: :get %>
  </div>

  <% if @product.garden.user == current_user %>
    <div>
      <%= form_for(@product) do |f| %>
        <div class="field">
          <%= f.label :tag_list %>
          <%= f.text_field :tag_list %>
        </div>

        <div class="update-btn">
          <%= f.submit %>
        </div>
    <% end %>
  </div>

  <div>
    <button class="action-btn btn1">
      <%= link_to 'Edit product', edit_product_path(@product) %>
    </button>
    <button class="action-btn btn2">
      <%= link_to "Delete Product", product_path(@product) , method: :delete, data: {confirm: "Are you sure you want to delete this product?"} %>
    </button>
  </div>
  <% end %>

  <div>
    <em>Tag: <%= @product.tag_list %></em>
  </div>


  <% if current_user && @product.garden.user != current_user %>
    <div class="product-show-text">Please leave a message
    <%= render 'messageform' %></div>
  <% end %>
  
</div>