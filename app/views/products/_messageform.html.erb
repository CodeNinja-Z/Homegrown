<%= form_for([@message]) do |f| %>
  <div class="field">
    <%= f.label :title %>
    <%= f.text_area :title %>
  </div>
  <div class="field">
    <%= f.label :content %>
    <%= f.text_area :content %>
  </div>
    <%= f.hidden_field :product_id, {value: @product.id} %>
    <%= f.hidden_field :receiver_id, {value: @product.garden.user.id} %>
    <%= f.hidden_field :sender_id, {value: current_user.id} %>
  <div class="action">
    <%= f.submit %>
  </div>
<% end %>