<div class="product-card">
  <div class="product-card-pic">
    <%= link_to product_path(product) do %>
      <%= image_tag product.image_url.to_s %>
    <% end %>
  </div>
  <div class="product-info">
    <h3><%= link_to product.name, product_path(product) %></h3>
    <p class="product-description">
      <%= product.description %>
    </p>
    <p class="product-info">
      <strong>Trade info:</strong> <%= product.trade_info %>
    </p>
    <p>
      <strong>Distance:</strong> <span class="product-distance-from"><%= product.distance_to(session_location, :km).round(2) %></span>Km from you.
    </p>
  </div>
  <button class="product-link">
    <%= link_to 'View Product', product_path(product) %>
  </button>
</div>