<h1>Welcome to <%= @garden.user.name %>'s Garden</h1>

<div class="garden-grid">
  <% @products.each do |product| %>
    <div class="product-card">
      <div class="product-card-pic">
        <%= link_to product_path(product) do %>
          <%= image_tag product.image_url(:thumb).to_s %>
        <% end %>
      </div>
      <div class="product-info">
        <h3><%= link_to product.name, product_path(product) %></h3>
        <div class="product-description">
          <%= product.description %>
        </div>
      </div>
    </div>
  <% end %>
</div>

<div class="garden-info">
  <div class="owner-info">

  </div>

  <div id="map-canvas" data-latitude="<%= @garden.latitude.to_f %>" data-longitude="<%= @garden.longitude.to_f %>">
  </div>
</div>

<% if @user == current_user %>
  <ul class="new-product-form">
    <%= render 'newproductform' %>
  </ul>
<% end %>
