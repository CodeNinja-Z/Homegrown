<%= form_for(@user) do |f| %>
  <div class="register-grid">
    <div class="register-field">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>
    
    <div class="register-field">
      <%= f.label :email %>
      <%= f.text_field :email %>
    </div>

    <div class="register-field">
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>

    <div class="register-field">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation %>
    </div>

    <div class="register-field">
      <li><%= f.label :avatar %></li>
      <li><%= f.file_field :image %></li>
    </div>

    <div class="action">
      <%= f.submit class: "create-user" %>
    </div>
  </div>
<% end %>