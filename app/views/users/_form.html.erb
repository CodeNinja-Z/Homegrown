<div class="register-form">
  <%= form_for(@user) do |f| %>
    <div class="register-field">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>
    
    <div class="register-field">
      <%= f.label :email %>
      <%= f.text_field :email %>
    </div>

    <div class="register-field">
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>

    <div class="register-field">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation %>
    </div>

    <div class="register-field">
      <%= f.label :avatar %>
      <%= f.file_field :image %>
    </div>

    <div class="register-action">
      <%= f.submit class: "create-user" %>
    </div>
  <% end %>
</div>